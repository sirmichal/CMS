{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/media_library.css') }}">
{% endblock %}

{% block content %}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                {% for file in files %}
                    <img class="media-library-img" src="{{ asset('uploads/') ~ file.name}}">
                {% endfor %}
                <div class="row">
                    <button class="btn btn-danger" id="btn-delete-img">Usu≈Ñ obrazki</button>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
