<a href="http://onet.pl">
    <div class="big-post text-center">
        <div class="big-post-thumbnail">
            {% if p.thumbnail is not null %}
                <img class="cropped-center big-post-thumbnail-img" src={{ asset('media/' ~ p.thumbnail.name) }}>
            {% endif %}
        </div>
        <div class="big-post-category text-uppercase">
            {% for c in p.categories %}
                <a href="#">{{ c.category }}</a>
                {% if loop.last == false %}&#8213{% endif %}
            {% endfor %}
        </div>
        <div class="big-post-title center-block">
            {{ p.title }}
        </div>
        <div class="big-post-content center-block">
            {{ p.content }}
        </div>
        <div class="big-post-info center-block">
            {{ p.user }} / {{ p.created | localizeddate('none', 'none', 'pl', null, "d MMMM Y, HH:mm") }}
        </div>
    </div>
</a>
