<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Blog</title>
        {% block stylesheets %}
            <link rel="stylesheet" href={{ asset('css/bootstrap.css') }}>
            <link rel="stylesheet" href={{ asset('css/styles.css') }}>
            <link rel="stylesheet" href={{ asset('css/slicknav.css') }}>
            <link rel="stylesheet" href={{ asset('css/hyperlink-effects.css') }}>
        {% endblock %}
        <script src={{ asset('js/jquery-3.1.0.js') }}></script>
        <script src={{ asset('js/jquery-ui.min.js') }}></script>
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans|Titillium+Web|Kaushan+Script" rel="stylesheet">
    </head>
    <body>

        {% include 'BlogBundle::navbar.html.twig' %}

        <div class="main-content">
            <div class="container">
                <div class="row">
                    <div class="col-md-8">
                        {% block content %}
                            {% include 'BlogBundle::posts.html.twig' %}
                        {% endblock %}
                    </div>
                    <div class="col-md-4">
                        {% include 'BlogBundle::sidebar.html.twig' %}
                    </div>
                </div>
            </div>
        </div>

        {% include 'BlogBundle::footer.html.twig' %}

        {% block javascripts %}
            <script src={{ asset('js/bootstrap.js') }}></script>
            <script src={{ asset('js/script.js') }}></script>
            <script src={{ asset('js/jquery.slides.min.js') }}></script>
            <script src={{ asset('js/jquery-ui.min.js') }}></script>
            <script src={{ asset('js/jquery.slicknav.js') }}></script>
        {% endblock %}
    </body>
</html>
