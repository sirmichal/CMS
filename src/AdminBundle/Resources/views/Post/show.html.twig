{% extends 'AdminBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs/dt-1.10.12/datatables.css"/>
{% endblock %}

{% block content %}

    <table id="show-posts-table" class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Tytuł</th>
            <th>Treść</th>
            <th>Użytkownik</th>
            <th>Dodano</th>
        </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr class="edit-post-row">
                <td>{{ post.title }}<br>
                    <a href={{ path('edit_post', {'postId': post.id}) }}>Edytuj</a>
                    <a href={{ path('delete_post', {'postId': post.id}) }}>Usuń</a></td>
                <td>{{ post.content }}</td>
                <td>{{ post.user }}</td>
                <td>{{ post.created|date("d-M-Y H:i") }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs/dt-1.10.12/datatables.js"></script>
{% endblock %}

