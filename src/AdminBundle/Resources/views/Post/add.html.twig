{% extends 'AdminBundle::base.html.twig' %}
{% block content %}
    
    <div class="row">
        <div class="col-xs-7">

    
            {{ form_start(form) }}
                <div class="form-group row">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'col-xs-1 text-right'}}) }}
                    <div class="col-xs-12">
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.content, null, {'label_attr': {'class': 'col-xs-1 text-right'}}) }}
                    <div class="col-xs-12">
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'style': 'height:300px'}}) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-xs-12">
                        {{ form_widget(form.thumbId, {'id': 'thumbnailIdField'}) }}
                    </div>
                </div>

                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#showImagesModal">Wybierz obrazek</button>
                <div id="showImagesModal" class="modal fade" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-body">
                                {% for image in images %}
                                    <img class="add-post-img" data-id={{ image.id }} src={{ (asset('media/') ~ image.name) | imagine_filter('thumbnails_medium') }}>
                                {% endfor %}
                            </div>
                            <div class="modal-footer">
                                <button type="button" disabled="true" class="btn btn-primary disable-btn" id="add-post-select-img-btn" data-dismiss="modal">Wybierz</button>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Zapisz</button>
            {{ form_end(form) }}
            
            
        </div>
            
            <div class="col-xs-5">
                {% if thumb is defined and thumb is not null %}
                    <img id="post-thumb-img" class="center-block" src={{ (asset('media/') ~ thumb.name) | imagine_filter('thumbnails_large') }}>
                {% else %}
                    <img id="post-thumb-img" class="center-block">
                {% endif %}
            </div>
    </div>
            
{% endblock %}