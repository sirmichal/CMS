<!DOCTYPE HTML>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>CMS</title>
        <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
            <link rel="stylesheet" href="{{ asset('admin/css/styles.css') }}">
            <link rel="stylesheet" href="{{ asset('admin/css/navbar.css') }}">
        {% endblock %}
    </head>
    <body>

        {% block page %}
            {% block navbar %}
                {% include 'AdminBundle:Default:navbar.html.twig' %}
            {% endblock %}

            <div class="content-with-sidebar">
                {% block sidebar %}
                    {% include 'AdminBundle:Default:sidebar.html.twig' %}
                {% endblock %}
                <div class="content" ng-app="cms">
                    <div class="container-fluid">
                        {% block content %}
                        {% endblock %}
                    </div>
                </div>
            </div>
        {% endblock %}

        {% block javascripts %}
            <script src={{ asset('js/jquery-3.1.0.js') }}></script>
            <script src={{ asset('js/bootstrap.js') }}></script>
            <script src={{ asset('node_modules/angular/angular.min.js') }}></script>
            <script src={{ asset('admin/js/script.js') }}></script>
            <script src={{ asset('admin/js/app.js') }}></script>
        {% endblock %}
    </body>
</html>
