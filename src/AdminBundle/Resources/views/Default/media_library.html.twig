{% extends 'AdminBundle::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/media_library.css') }}">
{% endblock %}

{% block content %}
    <div class="row">
        {% for file in files %}
            <img class="media-library-img" src="{{ (asset('media/') ~ file.name) | imagine_filter('thumbnails_large') }}">
        {% endfor %}
    </div>
    <div class="row">
        <button class="btn btn-danger" id="btn-delete-img">Usu≈Ñ obrazki</button>
    </div>
{% endblock %}
