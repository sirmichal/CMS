{% block content %}
    <div class="row">
        <div class="col-sm-12 text-justify red">

            <h3>UÅ¼ytkownicy</h3>
            <ul>
                {% for user in users %}
                    <li>
                        {{ user.username }}
                        <a class="glyphicon glyphicon-remove deleteItem" aria-hidden="true" href={{ path('delete_user', {'userId': user.id}) }}></a>
